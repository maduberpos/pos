{
  "name": "MaduberEPOS",
  "version": "1.0.4",
  "description": "Maduber EPOS",
  "main": "main.js",
  "repository": "https://github.com/maduberpk/pos",
  "author": "Maduber Ltd",
  "homepage": "https://www.maduber.pk",
  "scripts": {
    "start": "electron .",
    "mac": "electron-builder -m",
    "win": "electron-builder -w",
    "build": "electron-builder -mwl",
    "make-cert": "electron-builder create-self-signed-cert -p maduberposcert",
    "publish": "electron-builder build -mwl -p onTagOrDraft"
  },
  "build": {
    "appId": "pk.maduber.epos",
    "directories": {
      "buildResources": "."
    },
    "mac": {
      "publish": [
        "github"
      ],
      "category": "public.app-category.lifestyle"
    },
    "win": {
      "publish": [
        "github"
      ],
      "certificateFile": "private/maduberposcert.p12",
      "verifyUpdateCodeSignature": true,
      "publisherName": "Maduber Ltd"
    },
    "linux": {
      "publish": [
        "github"
      ],
      "category": "Office"
    }
  },
  "devDependencies": {
    "electron": "^2.0.0",
    "electron-builder": "^20.15.1"
  },
  "dependencies": {
    "electron-reload": "^1.2.2",
    "electron-updater": "^2.23.3",
    "express": "^4.16.3",
    "node-localstorage": "^1.3.1",
    "node-notifier": "^5.2.1",
    "shelljs": "^0.8.2",
    "socket.io": "^2.1.1"
  }
}
